<div class="container todo-page">
  <h1>Weekly To-Do <i class="fa fa-plus"></i></h1>
  <input class="todo-input" type="text" placeholder="Add New Activity">
  <ul class="todo-list">
    <li><span><i class="fa fa-trash"></i></span> Math Worksheet</li>
    <li><span><i class="fa fa-trash"></i></span> Science Video</li>
    <li><span><i class="fa fa-trash"></i></span> Arts and Crafts</li>
    <li><span><i class="fa fa-trash"></i></span> Nature Walk</li>
    <li><span><i class="fa fa-trash"></i></span> Listen to a Podcast</li>
  </ul>
</div>

<script>
  $(document).ready(function () {

    $(".todo-list").on("click", "li", function () {
      $(this).toggleClass("completed");
    });


    $(".todo-list").on("click", "span", function (event) {
      $(this).parent().fadeOut(500, function () {
        $(this).remove();
      });
      event.stopPropagation();
    });

    $("input[type='text']").keypress(function (event) {
      if (event.which === 13) {

        var todoText = $(this).val();
        $(this).val("");

        $(".todo-list").append("<li><span><i class='fa fa-trash'></i></span> " + todoText + "</li>")
      }
    });

    $(".fa-plus").click(function () {
      $("input[type='text'].todo-input").fadeToggle();
    });


  });
</script>