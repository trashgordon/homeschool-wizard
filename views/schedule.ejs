<script>
  (function hideForm() {
    $('#add-task').hide();
    $('#btn-hide-form').hide();    
  })()

  function showForm() {
    $('#add-task').show();
    $('#btn-hide-form').show();
  }

  function cancelForm() {
    $('#add-task').hide();
    $('#btn-hide-form').hide();    
  }
</script>

<% tasks.forEach(task => { %>
  <% if (task.tag === 'lunch') { %>
    <h1 class="event-header">Lunch</h1>
  <% } else if (task.tag === 'break') { %>
    <h1 class="event-header">Break</h1>
  <% } else { %>
    <h1 class="event-header">Class</h1>
  <% } %>
  <div class="event-container">
    <div class="event-left-column">
      <p class="event-startTime"><%= task.startTime %></p>
      <p>-</p>
      <p class="event-endTime"><%= task.endTime %></p>
    </div>
    <div class="event-right-column">
      <p class="event-title"><%= task.title %></p>
      <% if (task.notes) { %>
      <p class="event-notes"><%= task.notes %></p>
      <% } %>
      <p class="event-tag">
        <% switch (task.tag) {
          case "art": %>
            <i class="fa fa-paint-brush"></i> 
            <% break
          case "break": %>
            <i class="fa fa-walking"></i> 
            <% break
          case "history": %>
            <i class="fa fa-monument"></i> 
            <% break
          case "literature": %>
            <i class="fa fa-book"></i> 
            <% break
          case "lunch": %>
            <i class="fa fa-utensils"></i> 
            <% break
          case "math": %>
            <i class="fa fa-percent"></i> 
            <% break
          case "science": %>
            <i class="fa fa-flask"></i> 
        <% } %>
        <%= task.tag %>
      </p>
    </div>
  </div>
<% }) %>

