<script>

  function displayTagIcons() {
    switch (task.tag) {
      case "Art":
        $(".task-tag").prepend("<i class=\"fa fa-paintbrush\"></i>")
        break;
      case "Literature":
        $(".task-tag").addClass("fa fa-book");
      case "Math":
        $(".task-tag").addClass("fa fa-percent");
      case "Science":
        $(".task-tag").addClass("fa fa-car");
    }
  }

  (function hideForm() {
    $('#add-task').hide();
    $('#btn-hide-form').hide();    
  })();

  function showForm() {
    $('#add-task').show();
    $('#btn-hide-form').show();
  }

  function cancelForm() {
    $('#add-task').hide();
    $('#btn-hide-form').hide();    
  }
</script>


<% tasks.forEach(task => { %>
<div class="task">
  <div class="left-column">
    <p><%= task.startTime %></p>
    <p>-</p>
    <p><%= task.endTime %></p>
  </div>
  <div class="right-column">
    <p class="task-title"><%= task.title %></p>
    <% if (task.notes) { %>
    <p><%= task.notes %></p>
    <% } %>
    <% if (task.tag) { %>
    <p class="task-tag"><script>displayTagIcons()</script>  <%= task.tag %></p>
    <% } %>
  </div>
</div>
<% }) %>

<%- include('partials/addTask.ejs') %>

<button id="btn-add-task" onclick="showForm()"><i class="fa fa-plus fa-3x"></i></button>



