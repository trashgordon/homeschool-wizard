<% tasks.forEach(task => { %>
<div class="task" id="task-1">
  <div class="left-column">
    <p><%= task.startTime %></p>
    <p>-</p>
    <p><%= task.endTime %></p>
  </div>
  <div class="right-column">
    <p><%= task.title %></p>
    <% if (task.notes) { %>
    <p><%= task.notes %></p>
    <% } %>
    <% if (task.tag) { %>
    <p><i class="fa fa-percent"></i> <%= task.tag %></p>
    <% } %>
  </div>
</div>
<% }) %>

<%- include('partials/addTask.ejs') %>

<button id="btn-add-event"><i class="fa fa-plus fa-3x"></i></button>